{% set searchterms = 'category:"' ~ cat ~ '"' %}
{% set entries = craft.entries({
    section:    'news',
    search:     searchterms,
    orderBy:      'featuredOrder asc, postDate desc'
}) %}
{% set cat = "news" %}
{%  if entries|length %}
    {%  if showtitle %}
    <!-- Pillar List  Start -->
    <div class="pillar-list custom-container">
    {% for tentry in entries.all() %}
        <div class="pillar-widget">
            <div class="pillar_image">
            {% if tentry.newsPreviewImage|length %}
            <a href="{{ tentry.url }}"><img src="{{tentry.newsPreviewImage.one().getUrl('w1000')}}" /></a>
            {% endif %}
            </div>
            <div class="pillar-widget-content">
            <a href="{{ tentry.url }}" class="blue">{{ tentry.title }}</a>
        </a>

                <h6>{{ tentry.postDate.format('F d, Y') }}</h6>
                {{ tentry.body.getPage(1) |hacksaw(hack='words', limit='57', allow='<a>', append=",...") }}
                <a href="{{ tentry.url }}" ><span class="learn-more">...more ></span></a>

            </div>
        </div>
        {% endfor %}
    {% endif %}
    </div>
{% endif %}
    